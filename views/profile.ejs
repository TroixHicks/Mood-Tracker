<!doctype html>
<html>
<head>
    <title>Mood Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/d3cfcd7d11.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>


    <div>

        <div class="container">


            <div class="form">
              <form action="/entry" method="POST">
                <input type="date" placeholder="date" name="date" class="inputMan" required pattern="\d{4}-\d{2}-\d{2}">
                <input type="text" class="entry" placeholder="Entry" name="entry" />
                
                <button type="submit">Submit</button>
              </form>
          
          
          
            
            </div>
                
                <h3> Mood Tracker</h3>
                

                <% console.log(entries) %>
                <ul class="quotes">
                      <% for(var i=0; i<entries.length; i++) {%>
                        <% let color %>
                        <% if (entries[i].favorited === true) { %>
                          <% color = "blue" %>
                          <% } %>
                         
                        <li class="message">
                          <p style="color:<%= color%>"><%= entries[i].date %></p>
                          <p style="color:<%= color%>"><%= entries[i].entry %></p>
                          <p><%= entries[i].likes %></p>
                          <p class="hide"><%= entries[i]._id %></p>
                          <span><i class="fa fa-star" aria-hidden="true"></i></span>
                          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                        </li>
                      <% } %>
                </ul> 
          
                <!-- <p>Login or Signup:</p> 
                <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
                <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span>Signup</a>
           -->
                
          
        </div>
          
          


    

       




<script src="/main.js"></script>

</body>
</html>
